rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profile - users can read their own profile (needed for approval check)
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update, delete: if false; // Only admins can update approval status (via Firebase Console)
    }
    
    // User data - approved users can read/write their own data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null 
                          && request.auth.uid == userId 
                          && get(/databases/$(database)/documents/users/$(userId)).data.approved == true;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
